# restart / reload #
####################

# reload the configuration file
bindsym $mod+Shift+c reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart
# exit i3 (logs you out of your X session)
bindsym $mod+Shift+F12 exec i3-msg exit

# resize window (you can also use the mouse for that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
        bindsym h resize shrink width 10 px or 10 ppt
        bindsym j resize grow height 10 px or 10 ppt
        bindsym k resize shrink height 10 px or 10 ppt
        bindsym l resize grow width 10 px or 10 ppt

        # same bindings, but for the arrow keys
        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Down resize grow height 10 px or 10 ppt
        bindsym Up resize shrink height 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}

bindsym $mod+r mode "resize"

# floating pop up automatically
for_window [window_role="pop-up"] floating enable
for_window [window_role="task_dialog"] floating enable

# floating windows
for_window [class="KeePassXC"] floating enable
for_window [class="Arandr"] floating enable
for_window [class="Gcolor2"] floating enable
for_window [instance="gnome-alsamixer" class="Gnome-alsamixer"] floating enable
for_window [instance="Thunar" class="Thunar"] floating enable

# Terminal scratchpad with tmux and three windows: 1.term / 2.vim (on a temp file) / 3.translation CLI
for_window [instance="urxvt_scratchpad"] move to scratchpad, border none
bindsym $mod+Shift+t [instance="urxvt_scratchpad"] scratchpad show
exec urxvtc -name urxvt_scratchpad -e tmux new-session -d -s scratchpad \; new-window -n vim 'nvim +e /tmp/nvim-tmp.md' \; new-window -n trans 'trans -I' \; new-window -n vpn 'cd $XDG_CONFIG_HOME/.vpn' \; attach-session -d -t scratchpad\;

# htop scratchpad
for_window [instance="htop_scratchpad"] move to scratchpad, border none
bindsym $mod+Shift+p [instance="htop_scratchpad"] scratchpad show
exec urxvtc -name htop_scratchpad -e htop

# keepass scratchpad
for_window [class="KeePassXC"] move to scratchpad
bindsym $mod+Shift+a [class="KeePassXC"] scratchpad show
exec keepassxc

# bc scratchpad
for_window [instance="bc_scratchpad"] move to scratchpad, border none
bindsym $mod+Shift+b [instance="bc_scratchpad"] scratchpad show
exec urxvtc -name bc_scratchpad -e bc -l

# configuration of some software
for_window [class="URxvt*"] border pixel 1

# start softwares and command lines in workspaces
exec i3-msg workspace $office; exec joplin-desktop
exec i3-msg workspace $terms; exec /usr/bin/urxvtc

